{
  "name": "Simple Example",
  "version": "0.1",
  "description": "Simple Example",
  "background": {
    "persistent": false,
    "scripts": ["background.js", "libs/hot-reload.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://google.com/*", "https://google.ch/*", "https://*.google.com/*", "https://*.google.ch/*"],
      "all_frames": true,
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
