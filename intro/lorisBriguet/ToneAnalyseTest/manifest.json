{
  "name": "ToneAnnalysis",
  "description": "watch your tone",
  "version": "0.1",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["background.js", "hot-reload.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "ToneAnnalysis",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}
