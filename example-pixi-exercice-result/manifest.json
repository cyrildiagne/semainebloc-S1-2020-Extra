{
  "name": "Simple PIXI",
  "version": "1.0",
  "description": "Basic PIXI Example",
  "permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["libs/pixi.min.js", "src/pixi.js", "src/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "web_accessible_resources": ["res/map.png"],
  "manifest_version": 2
}
