{
  "name": "Find my glasses",
  "version": "0.1",
  "description": "Unblurr my vision",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content.js","jquery.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon_eye.png"
  },
  "manifest_version": 2
}
