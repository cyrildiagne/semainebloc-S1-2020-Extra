{
  "name": "IDIt",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "MÃ©lanie Fontaine - IDIt",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs"],
  "default_locale": "en",
  "background": {
    "scripts": ["src/websites.js", "js/hot-reload.js", "src/bg/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Productivity"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/inject/inject.css"],
      "js": ["src/websites.js", "src/inject/inject.js"]
    }
  ]
}
