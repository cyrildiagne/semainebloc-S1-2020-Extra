{
  "name": "ThreeJS Spheres Test",
  "version": "1.0",
  "description": "Does  what it says",
  "permissions": ["<all_urls>"],
  
  "icons": {
    "128": "icon.png"
  },
  
  "background": {
    "scripts": ["libs/hot-reload.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "libs/three.js",
        "src/CSS3DRenderer.js",
        "src/TrackBallControls.js",
        "src/content.js",
        "src/imagecropper.js"
      ],
      "css": ["css/content.css"]
    }
  ],
  "web_accessible_resources": ["textures/*"],
  "manifest_version": 2
}
